{% extends 'base.html.twig' %}

{% block title %}Mes réservations
{% endblock %}

{% block body %}
    <h1 class="text-center text-success">Mes réservations</h1>
		{% for reservation in reservations %}
            <div  class="row shadow mt-5 mx-5" >
                <div class="card" style="flex-direction:row; justify-content: space-between; background-color:rgb(204, 234, 215)">
                    <div>
                        <h5 class="mt-3"> Salle : {{ reservation.room.name }}</h5>
                    </div>
                    <div>
                        <p class="mt-2"><i>Début : </i>{{ reservation.startDate|date('d/m/Y') }} de {{ reservation.startDate|date('h:i:s') }}<br>
                        <i>Fin : </i>{{ reservation.endDate|date('d/m/Y') }} à {{ reservation.endDate|date('h:i:s') }}</p>
                    </div>
                    <div style="display:flex;">
                        <form action={{ path('delete_reservation', {'id': reservation.id}) }} onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette réservation ?')" method="post">
                            <button type="submit" class="mt-3 btn btn-danger mx-2">Supprimer</button>
                        </form>
                        <br>
                        <form action={{ path('edit_reservation', {'id': reservation.getId()}) }} method="post">
                            <button type="submit" class="mt-3 btn btn-danger mx-2">Modifier</button>
                        </form>
                    </div>
                </div>
            </div>
        {% endfor %}
{% endblock %}

