{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<div class="card mx-5">
    <form class="mx-5">
        <h1 class="text-center text-success">Contact<br>
            <a href="https://www.facebook.com/anthony.desa.3" style="color:green" ><i class="bi bi-facebook"></i></a>
            <a href="https://www.instagram.com/anthony.dsm/" style="color:green"><i class="bi bi-twitter"></i></a>
        </h1>
        <label for="inputNom" class="form-label" required>Votre nom</label><br>
