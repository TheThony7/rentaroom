        <textarea class="form-control" id="textarea" rows="3"></textarea><br>
        <a href={{path ('app_home')}} onclick="return alert('Votre message a bien été envoyé !')" class="btn btn-success mx-auto">Envoyer</a><br>
        <br>
        

    </form>
</div>
{% endblock %}
