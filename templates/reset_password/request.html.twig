                                    {{ form_start(requestForm) }}
                                    {{ form_row(requestForm.email, {'attr': {'class': 'form-control mb-3'}}) }}
                                    <div class="mb-3">
                                    <small>
                                    Entrez votre email et nous vous enverrons un email avec un lien pour changer votre mot de passe.
                                    </small>
                                </div>
                            <button class="btn btn-success btn-block" type="submit">Envoyer e-mail de réinitialisation</button>
                            {{ form_end(requestForm) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
